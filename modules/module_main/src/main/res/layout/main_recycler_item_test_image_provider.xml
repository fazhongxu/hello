<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="listener"
            type="com.xxl.hello.main.ui.main.adapter.OnTestRecycleItemListener" />

        <variable
            name="viewModel"
            type="com.xxl.hello.main.ui.main.adapter.TestRecycleItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_icon"
            android:layout_width="200dp"
            android:foreground="?attr/selectableItemBackground"
            android:onClick="@{()->listener.onItemClick(viewModel.providerMultiEntity)}"
            android:layout_height="100dp"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:paddingRight="15dp"
            android:paddingBottom="12dp"
            android:src="@drawable/resources_ic_hello" />

    </LinearLayout>

</layout>
