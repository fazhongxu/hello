<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.xxl.hello.main.ui.main.adapter.TestBindingRecycleItemViewModel" />

        <variable
            name="listener"
            type="com.xxl.hello.main.ui.main.adapter.TestBindingRecycleItemListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingRight="15dp"
            android:foreground="?selectableItemBackground"
            android:onClick="@{()->listener.onItemClick(viewModel.value)}"
            android:text="@{viewModel.observableTestValue}"
            tools:text="测试" />

    </LinearLayout>

</layout>
