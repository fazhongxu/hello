<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.xxl.hello.user.ui.setting.UserSettingViewModel" />

        <variable
            name="navigator"
            type="com.xxl.hello.user.ui.setting.UserSettingNavigator" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:alpha="0.6"
            android:padding="5dp"
            android:text="@{viewModel.observableNetworkConfig}"
            app:layout_constraintBottom_toTopOf="@+id/tv_environment"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="https://github.com" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_environment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:alpha="0.6"
            android:onClick="@{()->navigator.onSwitchEnvironmentClick()}"
            android:padding="5dp"
            android:text="@string/resources_switch_environment_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
