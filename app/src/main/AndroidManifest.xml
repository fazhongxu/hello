<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xxl.hello"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <uses-sdk tools:overrideLibrary="com.arthenica.mobileffmpeg,com.hw.videoprocessor"/>

    <application
        android:name="com.xxl.hello.main.HelloApplication"
        android:allowBackup="true"
        android:icon="@drawable/resources_ic_app_white_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/BaseTheme">

        <activity
            android:name="com.xxl.hello.main.ui.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/user_shortcut" />
        </activity>

        <activity
            android:name="com.xxl.hello.main.ui.main.MainActivity"
            android:launchMode="singleTask" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.xxl.hello.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider" />
        </provider>

        <meta-data
            android:name="com.xxl.core.image.loader.GlideImageModel"
            android:value="AppGlideModule" />

        <receiver android:name=".main.ui.widget.HelloAppWidgetProvider">
            <intent-filter>
                <!--必须添加的action，否则不会出现在小部件的列表中-->
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <!--自定义的action，用于在点击小部件上时发送的广播Action-->
                <action android:name="com.xxl.hello.widget.HelloAppWidgetProvider.onClick"/>
                <!--下面这几个都是不必须的-->
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE_OPTIONS"/>
                <action android:name="android.appwidget.action.APPWIDGET_RESTORED"/>
                <action android:name="android.appwidget.action.APPWIDGET_DELETED"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/hello_app_widget_info"/>

        </receiver>
    </application>

</manifest>